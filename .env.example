# Miljøvariabler for prosjektet "cv ai"
# Kopier til ".env" og fyll ut verdier (ikke sjekk inn hemmeligheter i git).

# App
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Database (Postgres eksempel)
DATABASE_TYPE=postgresql
DATABASE_URL=postgresql://user:password@localhost:5432/cvai_db

# Session / auth
NEXTAUTH_SECRET=change_this_to_a_long_random_string
JWT_SECRET=change_this_to_a_long_random_string

# OpenAI / LLM
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
OPENAI_TIMEOUT_MS=60000

# Vektor-database (velg én, fyll ut for den du bruker)
# Pinecone
PINECONE_API_KEY=
PINECONE_ENV=us-east1-gcp
PINECONE_INDEX_NAME=cvai-index

# Redis (eksempel hvis brukt til caching eller sessions)
REDIS_URL=redis://localhost:6379

# Filopplasting / object storage (S3-kompatibel)
STORAGE_PROVIDER=s3
AWS_REGION=eu-west-1
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# E-post for varsler / gjenoppretting
MAILER_HOST=smtp.example.com
MAILER_PORT=587
MAILER_USER=
MAILER_PASS=
MAIL_FROM="no-reply@yourdomain.com"

# Feilsporing
SENTRY_DSN=

# Valgfritt: feature flags / toggles
FEATURE_ENABLE_VECTOR_STORE=true
FEATURE_ENABLE_EMAIL=false